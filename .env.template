# RFC RAG Environment Variables Template
# Copy this file to .env and fill in your actual values

# Required for Claude AI integration (answer command)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Disable tokenizer warnings during development
TRANSFORMERS_VERBOSITY=error
TOKENIZERS_PARALLELISM=false

# Optional: Disable tqdm progress bars in scripts/tests
# TQDM_DISABLE=1

# Optional: Python environment settings
# PYTHONPATH=/path/to/your/project
# PYTHONDONTWRITEBYTECODE=1
